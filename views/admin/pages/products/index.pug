extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
block main 
    if(role.permissions.includes("product_view"))
        +alert-success(5000)

        h1 Trang sản phẩm
        .card.mb-3 
            .card-header Bộ lọc và tìm kiếm 
            .card-body 
                .row 
                    .col-6 
                        +filterStatus(filterStatus)
                    .col-6 
                        +search(keyword)

        .card.mb-3
            .card-header Sắp xếp
            .card-body
                .row
                    .col-4
                        +sort()
        .card.mb-3 
            
            .card-header Danh sách sản phẩm
            .card-body
                .row.g-3
                        .col-md-4
                            if(role.permissions.includes("product_edit"))
                                form(action=`${prefixAdmin}/roles/change-multi?_method=PATCH` method="POST" form-change-multi)
                                    .input-group
                                        select(name="type" class="form-control")
                                            option(disabled selected) -- Chọn hành động --
                                            option(value="active") Hoạt động
                                            option(value="inactive") Dừng hoạt động
                                            option(value="change-position") Thay đổi vị trí
                                            option(value="delete") Xoá
                                        button(type="submit" class="btn btn-primary") Áp dụng
                                    input(type="hidden" name="ids" value="")  
                    
                        .col-md-4
                            if(role.permissions.includes("product_create"))
                                .d-flex.align-items-center.justify-content-md-start
                                    a(href=`${prefixAdmin}/products/create` class="btn btn-outline-success") + Thêm mới
                            
                table(class="table table-hover table-sm" checkbox-multi)
                    thead 
                        tr 
                            th  
                                input(type="checkbox" name="checkall")
                            th STT
                            th Tên sản phẩm
                            th Danh mục
                            th Ảnh
                            th Mô tả
                            th Giá
                            th Vị trí
                            th Người tạo
                            th Trạng thái
                            th Hành động
                    tbody 
                        each product, index in products
                            tr 
                                td 
                                    input(type="checkbox" name="id" value=product.id)
                                td #{pagination.limitItems*(pagination.currentPage - 1) + (index+1)}
                                td= product.title
                                td= product.categoryTitle
                                td 
                                    img(src=product.thumbnail, alt=product.title, class="img-fluid", height="80", width="80")
                                td!= product.description
                                td= product.price + "$"
                                td
                                    input(type="number" value=product.position style="width: 60px" min="1" name="position")
                                td 
                                    p #{product.accountFullname}
                                    p #{moment(product.createdBy.createdAt).format("DD/MM/YYYY HH:mm:ss" )}
                                td 
                                    if(role.permissions.includes("product_edit"))
                                        if product.status === 'active'
                                            a.badge.bg-success(
                                                href="javascript:;"
                                                data-status="active"
                                                button-change-status
                                                data-id = product.id 
                                            ) Hoạt động
                                        else
                                            a.badge.bg-danger(
                                                href="javascript:;"
                                                data-status="inactive"
                                                button-change-status
                                                data-id= product.id
                                            ) Dừng hoạt động
                                td 
                                    a(href=`${prefixAdmin}/products/detail/${product.id}/`, class='btn btn-secondary btn-sm') Chi tiết
                                    if(role.permissions.includes("product_edit"))
                                        a(href=`${prefixAdmin}/products/edit/${product.id}/`, class='btn btn-warning btn-sm me-1') Sửa
                                    if(role.permissions.includes("product_delete"))
                                        a(class='btn btn-danger btn-sm' button-delete data-id=product.id) Xoá
        +pagination(pagination)
        form(action="" method="POST" id="form-change-status" data-path=`${prefixAdmin}/products/change-status`)

        form(action="" method="POST" id="form-delete-item" data-path=`${prefixAdmin}/products/delete`)

        script(src="/admin/js/product.js")