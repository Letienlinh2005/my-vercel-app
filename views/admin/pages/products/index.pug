extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
block main 
    h1 Trang sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
        .row 
            .col-6 
                +filterStatus(filterStatus)
            .col-6 
                +search(keyword)

    .card.mb-3 
        .card-header Danh sách sản phẩm
        .card-body 
            table.table.table-hover.table-sm
                thead 
                    tr 
                        th STT
                        th Tên sản phẩm
                        th Ảnh
                        th Mô tả
                        th Giá
                        th Trạng thái
                        th Hành động
                tbody 
                    each product, index in products
                        tr 
                            td #{index + 1}
                            td= product.title
                            td 
                                img(src=product.thumbnail, alt=product.title, class="img-fluid", height="80", width="80")
                            td= product.description
                            td= product.price + "$"
                            td 
                                if product.status === 'active'
                                    span.badge.bg-success Sẵn sàng
                                else if product.status === 'inactive'
                                    span.badge.bg-secondary Ngừng bán
                                else 
                                    span.badge.bg-danger Không rõ
                            td 
                                a(href=`${prefixAdmin}/products/${product.id}/edit`, class='btn btn-warning btn-sm me-1') Sửa
                                a(href=`${prefixAdmin}/products/${product.id}/delete`, class='btn btn-danger btn-sm') Xoá
    +pagination(pagination)

    
