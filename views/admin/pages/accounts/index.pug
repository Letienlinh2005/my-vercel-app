extends ../../layouts/default.pug
include ../../mixins/tableTree.pug
include ../../mixins/alert.pug
block main 
    if(role.permissions.includes("account_view"))
        h1 Danh sách tài khoản
        
        +alert-error(5000)
        +alert-success(5000)
        .card.mb-3 
            .card-header Danh sách tài khoản
            .card-body
                .row
                    .col-4
                    
                    .col-4
                        if(role.permissions.includes("account_create"))
                            .d-flex.align-items-center.justify-content-md-start
                                a(href=`${prefixAdmin}/accounts/create` class="btn btn-outline-success") + Thêm mới
                
                table(class="table table-hover table-sm" checkbox-multi)
                    thead 
                        tr 
                            th STT
                            th Họ và tên
                            th Email
                            th Số điện thoại
                            th Phân quyền
                            th Người tạo
                            th Trạng thái
                            th Chức năng
                    tbody 
                        each item, index in records
                            tr
                                td= index+1
                                td!= item.fullName
                                td!= item.email
                                td= item.phone
                                td= item.role.title
                                td 
                                    p #{item.accountFullname}
                                td 
                                    if(role.permissions.includes("account_edit"))
                                        if item.status === 'active'
                                            a.badge.bg-success(
                                                href="javascript:;"
                                                data-status="active"
                                                button-change-status
                                                data-id = item.id 
                                            ) Hoạt động
                                        else
                                            a.badge.bg-danger(
                                                href="javascript:;"
                                                data-status="inactive"
                                                button-change-status
                                                data-id= item.id
                                            ) Dừng hoạt động
                                td 
                                    a(href=`${prefixAdmin}/accounts/detail/${item.id}/`, class='btn btn-secondary btn-sm') Chi tiết
                                    if(role.permissions.includes("account_edit"))
                                        a(href=`${prefixAdmin}/accounts/edit/${item.id}/`, class='btn btn-warning btn-sm me-1') Sửa
                                    if(role.permissions.includes("account_delete"))
                                        a(class='btn btn-danger btn-sm' button-delete data-id=item.id) Xoá
